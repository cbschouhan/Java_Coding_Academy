<?xml version="1.0" encoding="UTF-8"?> 


<!-- It is schema style configuration for Spring 2.5  -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:lang="http://www.springframework.org/schema/lang"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
	">
   	
   <aop:aspectj-autoproxy />
   <context:component-scan base-package="com.jp.hr.beans"></context:component-scan>
   
	<bean class="com.jp.hr.advices.SecurityCheck"></bean> 
	<bean class="com.jp.hr.services.MyServices"></bean>
    	
</beans>
